generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model Drinque {
  id Int @default(autoincrement()) @id
  nome String
  imagem String
  categorias Categoria[]
  ingredientes Ingrediente[]
  // preparo String
  calorias Int
  teorAlcoolico String
  dificuldade String
  sobre String
  dicas Dica[]
}

model Ingrediente {
  id Int @default(autoincrement()) @id
  drinqueId Int
  drinque Drinque @relation(fields: [drinqueId], references: [id])
  tipoIngredienteid Int
  tipoIngrediente TipoIngrediente @relation(fields: [tipoIngredienteid], references: [id])
  quantidade Int
  medida String
}

model TipoIngrediente {
  id Int @id @default(autoincrement())
  nome String
}

model Categoria {
  id Int @id @default(autoincrement())
  nome String
  drinques Drinque[] @relation(references: [id])
}

model Dica {
  id Int @default(autoincrement()) @id
  drinqueId Int
  Drinque Drinque @relation(fields: [drinqueId], references: [id])
  dica String
}
